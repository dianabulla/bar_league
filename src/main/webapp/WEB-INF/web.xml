<?xml version="1.0" encoding="UTF-8"?>
<web-app
    version="4.0"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

  <display-name>bar_league</display-name>

  <!-- Registro del LoginServlet -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.barleague.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>

  <!-- Registro del UsuarioServlet -->
  <servlet>
    <servlet-name>UsuarioServlet</servlet-name>
    <servlet-class>com.barleague.servlets.UsuarioServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UsuarioServlet</servlet-name>
    <url-pattern>/UsuarioServlet</url-pattern>
  </servlet-mapping>

  <!-- Registro del ProductoServlet -->
  <servlet>
    <servlet-name>ProductoServlet</servlet-name>
    <servlet-class>com.barleague.servlets.ProductoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductoServlet</servlet-name>
    <url-pattern>/ProductoServlet</url-pattern>
  </servlet-mapping>

  <!-- Registro del PedidoServlet -->
  <servlet>
    <servlet-name>PedidoServlet</servlet-name>
    <servlet-class>com.barleague.servlets.PedidoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PedidoServlet</servlet-name>
    <url-pattern>/PedidoServlet</url-pattern>
  </servlet-mapping>

  <!-- Registro del VentaServlet -->
<servlet>
  <servlet-name>VentaServlet</servlet-name>
  <servlet-class>com.barleague.servlets.VentaServlet</servlet-class>
</servlet>

<servlet-mapping>
  <servlet-name>VentaServlet</servlet-name>
  <url-pattern>/VentaServlet</url-pattern>
</servlet-mapping>

</web-app>
